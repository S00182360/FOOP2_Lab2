<Window x:Class="FOOP2_Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FOOP2_Lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--the following is used to experiment, not as an example of good layout-->
        <Grid.RowDefinitions>
            <RowDefinition Height="150px"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="auto" MinWidth="50"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="1" Grid.Row="3" FontSize="23" Margin="20,15,10,5">Submit</Button>
        <Button Grid.Column="0" Grid.Row="2" Name="bttnTwo" Margin="10">Submit Again</Button>
        <Button Grid.Column="2" Grid.Row="1" Name="btnThree" Margin="10" FontFamily="Helvetica" FontSize="15" >Third button</Button>
    </Grid>
</Window>
